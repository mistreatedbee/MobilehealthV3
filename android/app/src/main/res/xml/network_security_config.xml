<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTPS connections to any domain -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow connections to localhost and 10.0.2.2 (Android emulator) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Allow connections to production backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">healthappbackend-my3d.onrender.com</domain>
    </domain-config>
</network-security-config>

